<ScrollView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="vertical"
			style="@style/App.LoginItem"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/CreateTitle" />
			<EditText
				android:inputType="textAutoCorrect"
				android:id="@+id/create_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			style="@style/App.LoginItem"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/CreateDescription" />
			<EditText
				android:inputType="textAutoCorrect|textMultiLine"
				android:id="@+id/create_description"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			style="@style/App.LoginItem"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<CheckBox
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/CreateIsPublic"
				android:id="@+id/create_isPublic"/>
		</LinearLayout>
		<Button
			android:onClick="onSubmit"
			style="@style/App.StyledButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/CreateSubmit"
			android:layout_gravity="right"/>
	</LinearLayout>
</ScrollView>